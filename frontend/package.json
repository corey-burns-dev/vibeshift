{
	"name": "sanctum-frontend",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "bun --bun vite --host",
		"build": "bun --bun vite build",
		"preview": "bun --bun vite preview",
		"lint": "bun --bun biome check src",
		"lint:fix": "bun --bun biome check --write src",
		"format": "bun --bun biome format src",
		"format:write": "bun --bun biome format --write src",
		"check": "bun --bun biome check src",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:smoke": "playwright test --grep @smoke",
		"test:e2e:install": "playwright install --with-deps chromium"
	},
